<div>
  <div>
    <h1>
      Album #<%= @the_album.id %> details
    </h1>

    <div>
      <div>
        <a href="/albums">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_album/<%= @the_album.id %>">
          Delete album
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Title
      </dt>
      <dd>
        <%= @the_album.title %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @the_album.description %>
      </dd>

      <dt>
        Creator
      </dt>
      <dd>
        <%= @the_album.creator_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_album.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_album.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit album
    </h2>

    <form action="/modify_album/<%= @the_album.id %>"  method="post" >
      <div>
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="query_title" value="<%= @the_album.title %>">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description" value="<%= @the_album.description %>">
      </div>

      <div>
        <label for="creator_id_box">
          Creator
        </label>

        <input type="text" id="creator_id_box" name="query_creator_id" value="<%= @the_album.creator_id %>">
      </div>

      <button>
        Update album
      </button>
    </form>
  </div>
</div>

<hr>
