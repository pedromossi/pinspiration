<div>
  <div>
    <h1>
      List of all pins
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new pin
    </h2>

    <form action="/insert_pin" method="post">
      <div>
        <label for="photo_id_box">
          Photo
        </label>

        <input type="text" id="photo_id_box" name="query_photo_id">
      </div>

      <div>
        <label for="pinner_id_box">
          Pinner
        </label>

        <input type="text" id="pinner_id_box" name="query_pinner_id">
      </div>

      <button>
        Create pin
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Photo
        </th>

        <th>
          Pinner
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_pins.each do |a_pin| %>
      <tr>
        <td>
          <%= a_pin.id %>
        </td>

        <td>
          <%= a_pin.photo_id %>
        </td>

        <td>
          <%= a_pin.pinner_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_pin.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_pin.updated_at) %> ago
        </td>

        <td>
          <a href="/pins/<%= a_pin.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
